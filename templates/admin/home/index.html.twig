{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="text-3xl italic font-beaufort text-gold-150 font-black mb-8">Hello Admin</h1>
    <ul class="flex items-center gap-8">
    <li><a class="link transition duration-150 ease-out hover:text-gold-150 small primary" href="/admin/matchs">Matchs</a></li>
    <li><a class="link transition duration-150 ease-out hover:text-gold-150 small primary" href="/admin/team">Teams</a></li>
    {% if app.user.getRoles[0] == 'ROLE_SUPER_ADMIN' %}
    <li><a class="link transition duration-150 ease-out hover:text-gold-150 small primary" href="/admin/user">Users</a></li>
    {% endif %}
    </ul>
</div>
{% endblock %}
