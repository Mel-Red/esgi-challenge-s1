{% extends 'base.html.twig' %}

{% block title %}Hello MatchsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { adminground: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper flex flex-col gap-8">
    <ul>
    {% for match in matchs %}

        <div class="flex justify-between">
            <div class=" bg-gold-150 text-white inline-block px-4 py-1 pb-6 translate-y-6 font-beaufort font-black italic tracking-widest">
            {{match.competition}}
            </div>
            <div class=" bg-gold-150 text-white inline-block px-4 py-1 pb-6 translate-y-6 font-beaufort font-black italic tracking-widest">  {{match.date}}</div>
        </div>
        <li class="rounded-3xl relative overflow-hidden  bg-gradient-to-br from-darkBlue-50 to-darkBlue-150 text-white flex flex-col gap-4 items-center w-full">
            <img src="/assets/images/teams/fnatic.png" class="absolute h-24 -left-4 -top-4 opacity-50" alt="logo">
            <img src="/assets/images/teams/fnatic.png" class="absolute h-24 -right-4 -top-4 opacity-50" alt="logo">
            <div class=" w-full grid grid-cols-match gap-8 py-4">
                <div class="flex items-center justify-center gap-4">
                    <img src="/assets/images/teams/fnatic.png" class="h-12 self-start"  alt="logo">
                    <span>{{ match.teamOne }}</span>
                    <span>{{ match.teamOneRating }}</span>
                </div>
                <span>-</span>
                <div class="flex items-center justify-center gap-4">
                    <span>{{ match.teamTwoRating }}</span>
                    <span>{{ match.teamTwo }}</span>
                    <img src="/assets/images/teams/fnatic.png" class="h-12 self-start"  alt="logo">
                </div>
            </div>
            {# Buttons #}
            <div class="grid-cols-2 grid w-full font-beaufort gap-1  text-xl">
                <button class="bg-gold-150  rounded-bl-3xl flex justify-between items-center  py-1 px-4">
                    <span class="text-darkBlue-50  font-black">{{ match.teamOne }}</span>
                    <span class="text-2xl font-black"> 1.5</span>
                </button>
                <button class="bg-gold-150 w-full rounded-br-3xl flex justify-between py-1 px-4">
                    <span class="text-2xl font-black">2.2</span>
                    <span class="text-darkBlue-50  font-black">{{ match.teamTwo }}</span>
                </button>
            </div>
        </li>
    {% endfor %}
</ul>
</div>
{% endblock %}
